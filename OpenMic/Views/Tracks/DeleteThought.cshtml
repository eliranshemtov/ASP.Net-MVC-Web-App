@model OpenMic.Models.Thought

@{
    ViewBag.Title = "Delete Thought";
}

<h2>Delete Thought</h2>

<h4><b>Are you sure you want to delete this?</b></h4>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <b>  @Html.DisplayFor(model => model.users.Name) </b> Said: 
        </dd>

        <dd>
            " @Html.DisplayFor(model => model.Content) "
        </dd>


        <dd>
            <br>
            About: <b> @Html.DisplayFor(model => model.tracks.Title)</b> &nbsp;&nbsp;&nbsp; In the: <b> @Html.DisplayFor(model => model.date)</b>
        </dd>
    </dl>


    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List  ", "Index")
            |
            @{if(User.IsInRole("admin")){
                  @Html.ActionLink("Back To AdminZone", "Admin", "Home");
            }
            }
        </div>
    }
</div>
