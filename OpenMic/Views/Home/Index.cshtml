@model IEnumerable<OpenMic.Models.ApplicationUser>

@{
    ViewBag.Title = "Home";
}

<h2 class="transHeader">&nbsp; Open Mic</h2>

<p>

    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
    <p>
        <b> Genre:</b> @Html.DropDownList("artistGenre", "All") &nbsp;
        <b> Artist:</b> @Html.TextBox("artist") &nbsp;
        <b> Email:</b> @Html.TextBox("email") &nbsp;
        <input type="submit" value="Filter" /><br /><br />
    </p>
    }


    <table class="table" style="width:80%;">
        <tr>
            <th>
               
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src=@item.Img alt="profile" height="120" width="120">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>

                <td>
                    @item.BirthDate.ToShortDateString()
                </td>

            </tr>
        }

    </table>





